    <script>
        // ----------------------------
        // Simple section switching
        // ----------------------------
        const navButtons = document.querySelectorAll(".nav-button");
        const sections = document.querySelectorAll(".section");

        function activateSection(sectionId) {
            sections.forEach(sec => {
                if (sec.id === "section-" + sectionId) {
                    sec.classList.add("active");
                } else {
                    sec.classList.remove("active");
                }
            });

            navButtons.forEach(btn => {
                if (btn.dataset.section === sectionId) {
                    btn.classList.add("active");
                } else {
                    btn.classList.remove("active");
                }
            });
        }

        navButtons.forEach(btn => {
            btn.addEventListener("click", () => {
                const sectionId = btn.dataset.section;
                if (sectionId) {
                    activateSection(sectionId);
                }
            });
        });

        // Jump buttons from inside cards
        document.querySelectorAll("[data-section-jump]").forEach(el => {
            el.addEventListener("click", () => {
                const target = el.getAttribute("data-section-jump");
                if (target) {
                    activateSection(target);
                }
            });
        });

        // ----------------------------
        // Placeholder for API wiring
        // ----------------------------
        // Example: you can replace these with real fetch calls to your backend.
        const mockStats = {
            activeCaseMembers: 0,
            openRisks: 0,
            actions24h: 0,
            ticketPanels: 0,
            openTickets: 0
        };

        function hydrateOverview(stats) {
            document.getElementById("overview-active-case-count").textContent =
                stats.activeCaseMembers + " members";
            document.getElementById("overview-open-risks").textContent = stats.openRisks;
            document.getElementById("overview-24h-actions").textContent = stats.actions24h;
            document.getElementById("overview-ticket-panels").textContent =
                stats.ticketPanels + " panels";
            document.getElementById("overview-open-tickets").textContent = stats.openTickets;
        }

        // Initially hydrate with placeholder values
        hydrateOverview(mockStats);

        // Later you could do something like:
        // fetch("https://your-api/guilds/123/overview")
        //   .then(res => res.json())
        //   .then(data => hydrateOverview(data));
    </script>
</body>
</html>
